<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchKeyword"
            type="String" />

        <variable
            name="githubRepo"
            type="com.kwonyj.github_search_repository.model.GithubRepo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repository_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{githubRepo.fullName}"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_bookmark"
            app:layout_constraintTop_toTopOf="parent"
            bind:bold_span_target="@{searchKeyword}"
            bind:bold_span_text="@{githubRepo.fullName}"
            tools:text="skydoves/Pokedex" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repository_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="@{githubRepo.description}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_repository_name"
            app:layout_constraintTop_toBottomOf="@id/tv_repository_name"
            tools:text="Android Pokedex using Hilt, Motion, Coroutines, Flow, Jetpack (Room, ViewModel) based on MVVM architecture." />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_stars"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintStart_toStartOf="@id/tv_repository_description"
            app:layout_constraintTop_toBottomOf="@id/tv_repository_description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:includeFontPadding="false"
            android:text="@{String.format(@string/main_stars, githubRepo.starsPrettyPrint())}"
            android:textColor="@color/color_6c737c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_stars"
            app:layout_constraintStart_toEndOf="@id/iv_stars"
            app:layout_constraintTop_toTopOf="@id/iv_stars"
            tools:text="4.5k stars" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_forks"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_baseline_content_copy_24"
            app:layout_constraintBottom_toBottomOf="@id/iv_stars"
            app:layout_constraintStart_toEndOf="@id/tv_stars"
            app:layout_constraintTop_toTopOf="@id/iv_stars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:includeFontPadding="false"
            android:text="@{String.format(@string/main_forks, githubRepo.forksPrettyPrint())}"
            android:textColor="@color/color_6c737c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_forks"
            app:layout_constraintStart_toEndOf="@id/iv_forks"
            app:layout_constraintTop_toTopOf="@id/iv_forks"
            tools:text="532 forks" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_lang"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_forks"
            app:layout_constraintStart_toEndOf="@id/tv_forks"
            app:layout_constraintTop_toTopOf="@id/tv_forks"
            bind:gone="@{githubRepo.language == null}"
            tools:cardBackgroundColor="@color/teal_200" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:includeFontPadding="false"
            android:text="@{githubRepo.language}"
            android:textColor="@color/color_6c737c"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/cv_lang"
            app:layout_constraintStart_toEndOf="@id/cv_lang"
            app:layout_constraintTop_toTopOf="@id/cv_lang"
            bind:gone="@{githubRepo.language == null}"
            tools:text="Kotlin" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>